<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.ezenac.ss.household.ListActivity">

    <RelativeLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73.3dp"
        android:layout_marginRight="80dp"
        >
        <Button
            android:id="@+id/list__btn_dateBackward"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/ic_back_gray"
            android:layout_toLeftOf="@+id/list_txt_date"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
        <TextView
            android:id="@+id/list_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#232323"
            android:lineSpacingExtra="0dp"
            android:layout_centerInParent="true"
            android:text="2017/11/21"
            />
        <Button
            android:id="@+id/list__btn_dateForward"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/ic_back_r_gray"
            android:layout_toRightOf="@+id/list_txt_date"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </RelativeLayout>

    <View
        android:id="@+id/list_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#979797"
        android:layout_alignBottom="@+id/date"

        />

    <TextView
        android:id="@+id/list_subtitle"
        android:layout_width="match_parent"
        android:layout_height="37.5dp"
        android:textSize="12dp"
        android:textColor="#4a4a4a"
        android:lineSpacingExtra="5dp"
        android:text="@string/list_title"
        android:gravity="center_vertical"
        android:background="#eee9e9"
        android:paddingLeft="10.5dp"
        android:layout_below="@+id/list_line"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/list_subtitle">

    </ListView>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@drawable/btn_add_photo_keycolor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.8dp"
        android:layout_marginBottom="9dp"
        />


</RelativeLayout>
